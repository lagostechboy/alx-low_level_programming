#include "lists.h"
#include <stdlib.h>
#include <string.h>
#include <stdio.h>

/**
 * add_node - function add new node to begining of list_t
 * @head: pointer to the structure
 * @str: rep a string
 * Return: this is the adrres of new element
 */

list_t *add_node(list_t **head, const char *str)
{
list_t *new;
unsigned int count = 0;

	newNode = malloc(sizeof(list_t));
	if (newNode == NULL)
	{
		free(newNode);
		return (NULL);
	}
	newNode->str = strdup(str);
	while (str[count] != '\0')
	{
		count++;
	}
	new->len = count;
	if (*head != NULL)
		newNode->next = *head;
	if (*head == NULL)
		newNode->next = NULL;
	*head = newNode;
	return (*head);
}
