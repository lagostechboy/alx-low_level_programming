#include "main.h"

/**
 * char *create_array - creates an array of chars 
 * @size: address to print
 * @c: the size of the memory to print
 *
 * Return 0.
 */

char *create_array(unsigned int size, char c)
{
  int i;

  if (size == 0)
    {
      return NULL;
    }
  char *array = (char *)malloc(size * sizeof(char));
  
    if (array == NULL)
      {
	return NULL;
      }
    for (i = 0; i < size; i++)
      {
	array[i] = c;
      }
    return array;
}
